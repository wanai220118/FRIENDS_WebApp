@model FRIENDS_WebApp.Models.Song

@{
    ViewData["Title"] = "Delete Song";
}

<h1 class="mb-4" style="color: #FC2F00;">@ViewData["Title"]</h1>

<div class="card shadow p-4 rounded" style="background-color: #FFF1EC; border-left: 8px solid #FC2F00;">
    <div class="card-body">
        <h5 class="text-danger mb-3">Are you sure you want to delete this song?</h5>

        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Artist</dt>
            <dd class="col-sm-9">@Model.Artist</dd>

            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Genre</dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@Model.Duration</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
            <input type="hidden" asp-for="Id" />
            <div>
                <input type="submit" value="Confirm Delete"
                       onclick="return confirm('Are you sure you want to delete this song?');" 
                       class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
