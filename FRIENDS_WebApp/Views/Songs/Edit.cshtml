@model FRIENDS_WebApp.Models.Song

@{
    ViewData["Title"] = "Edit Song";
}

<h1 class="mb-4" style="color: #FC2F00;">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" autofocus />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Artist" class="form-label"></label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Genre" class="form-label"></label>
                <select asp-for="Genre" class="form-select">
                    <option value="">-- Select Genre --</option>
                    <option>Ballad</option>
                    <option>Classical</option>
                    <option>Hip Hop</option>
                    <option>Indie</option>
                    <option>Jazz</option>
                    <option>Kpop</option>
                    <option>Pop</option>
                    <option>R&B</option>
                    <option>Rock</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duration" class="form-label"></label>
                <input asp-for="Duration" class="form-control" placeholder="e.g. 03:45" />
                <span asp-validation-for="Duration" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-primary {
        background-color: #FC2F00;
        border-color: #FC2F00;
    }

        .btn-primary:hover {
            background-color: #FC2F00;
            border-color: #FC2F00;
        }
</style>
