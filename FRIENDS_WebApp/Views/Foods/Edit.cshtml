@model FRIENDS_WebApp.Models.Food

@{
    ViewData["Title"] = "Edit Food";
}

<h1 class="mb-4" style="color: #EC7D10;">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="FoodName" class="form-label"></label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-select">
                    <option value="">-- Select Category --</option>
                    <option>Heavy Meal</option>
                    <option>Snack</option>
                    <option>Dessert</option>
                    <option>Beverage</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Category" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateAdded" class="form-label"></label>
                <input asp-for="DateAdded" class="form-control" />
                <span asp-validation-for="DateAdded" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-warning text-white">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    h1 {
        color: #EC7D10;
    }

    .btn-warning {
        background-color: #EC7D10;
        border-color: #EC7D10;
    }

        .btn-warning:hover {
            background-color: #FC2F00;
            border-color: #FC2F00;
        }
</style>
