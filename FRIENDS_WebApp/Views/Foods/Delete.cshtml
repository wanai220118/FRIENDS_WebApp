@model FRIENDS_WebApp.Models.Food

@{
    ViewData["Title"] = "Delete Food";
}

<h1 class="mb-4" style="color: #EC7D10;">@ViewData["Title"]</h1>

<div class="card shadow p-4 rounded" style="background-color: #FFF5F2; border-left: 8px solid #EC7D10;">
    <div class="card-body">
        <h5 class="text-danger mb-3">Are you sure you want to delete this food item?</h5>
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.FoodName</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Date Added</dt>
            <dd class="col-sm-9">@Model.DateAdded.ToString("dd MMM yyyy")</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
            <input type="hidden" asp-for="Id" />
            <div>
                <input type="submit" value="Confirm Delete"
                       onclick="return confirm('Are you sure you want to delete this food?');" 
                       class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>