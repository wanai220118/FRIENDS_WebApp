@model IEnumerable<FRIENDS_WebApp.Models.Photo>

@{
    ViewData["Title"] = "Photo Gallery";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h1 class="text-uppercase" style="color: #EC0868;">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn text-white" style="background-color: #EC0868;">+ Upload New Memory</a>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var photo in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm" style="background-color: #FFF2F7;">
                <img src="@photo.ImagePath"
                     class="card-img-top"
                     alt="@photo.Title"
                     style="aspect-ratio: 3/4; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title text-dark">@photo.Title</h5>
                    <p class="card-text text-muted">@photo.Caption</p>
                </div>
                <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between">
                    <small class="text-muted">Uploaded: @photo.DateUploaded.ToString("dd/MM/yyyy")</small>
                </div>
                <td>
                    <a asp-action="Edit" asp-route-id="@photo.Id"
                       class="btn btn-sm text-dark"
                       style="background-color: #FFD6E8;">Edit</a>

                    <a asp-action="Details" asp-route-id="@photo.Id"
                       class="btn btn-sm text-white"
                       style="background-color: #D64191;">Details</a>

                    <a asp-action="Delete" asp-route-id="@photo.Id"
                       class="btn btn-sm text-white"
                       style="background-color: #8B004B;">Delete</a>
                </td>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function confirmDelete(e) {
            if (confirm('Are you sure you want to delete this memory?')) {
                return true;
            } else {
                e.preventDefault();
                return false;
            }
        }
    </script>
}
