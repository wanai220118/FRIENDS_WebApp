@model FRIENDS_WebApp.Models.Photo

@{
    ViewData["Title"] = "Delete Photo";
}

<h1 class="mb-4" style="color: #EC0868;">@ViewData["Title"]</h1>

<div class="card shadow p-4 rounded" style="background-color: #FFF5F9; border-left: 8px solid #EC0868;">
    <div class="card-body">
        <h5 class="text-danger mb-3">Are you sure you want to delete this photo?</h5>

        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Caption</dt>
            <dd class="col-sm-9">@Model.Caption</dd>

            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImagePath" alt="Photo" class="img-thumbnail" style="max-width: 250px; height: auto;" />
            </dd>

            <dt class="col-sm-3">Date Uploaded</dt>
            <dd class="col-sm-9">@Model.DateUploaded.ToString("dd MMM yyyy")</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
            <input type="hidden" asp-for="Id" />
            <div>
                <input type="submit" value="Confirm Delete"
                       onclick="return confirm('Are you sure you want to delete this memory?');"
                    class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
