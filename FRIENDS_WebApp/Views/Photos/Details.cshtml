@model FRIENDS_WebApp.Models.Photo

@{
    ViewData["Title"] = "Photo Details";
}

<h1 class="mb-4" style="color: #EC0868;">@ViewData["Title"]</h1>

<div class="card shadow p-4 rounded" style="background-color: #FFF2F7; border-left: 8px solid #EC0868;">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Caption</dt>
            <dd class="col-sm-9">@Model.Caption</dd>

            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImagePath"
                     alt="Photo"
                     class="img-thumbnail"
                     style="width: 280px; aspect-ratio: 3/4; object-fit: cover;" />
            </dd>

            <dt class="col-sm-3">Date Uploaded</dt>
            <dd class="col-sm-9">@Model.DateUploaded.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn text-white" style="background-color: #EC0868;">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
